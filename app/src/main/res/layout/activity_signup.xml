<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_white_orange"
    android:orientation="vertical"
    tools:context=".ui.activities.signin">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7">
    <TextView
        android:id="@+id/skipp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_marginTop="10sp"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="@font/poppins"
        android:paddingRight="25dp"
        android:drawableEnd="@drawable/ic_baseline_skip_next_24"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logofororange" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- 2nd part -->
 <androidx.appcompat.widget.LinearLayoutCompat
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="3">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
       android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:minHeight="200dp"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="SIGN UP"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/eded"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:hint="name"
                android:fontFamily="@font/poppins"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="15sp"
                android:backgroundTint="@color/orange"/>
            <EditText
                android:layout_weight="10"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:hint="muftainfo@gmail.com"
                android:fontFamily="@font/poppins"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="15sp"
                android:backgroundTint="@color/orange"/>



            <EditText
                android:backgroundTint="@color/orange"
                android:id="@+id/password"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:hint="Password"
                android:fontFamily="@font/poppins"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp" />
            <EditText
                android:backgroundTint="@color/orange"
                android:id="@+id/Cpassword"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:hint="Confirm Password"
                android:fontFamily="@font/poppins"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp" />

            <TextView
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Forgot Password?"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:fontFamily="@font/poppins"
                android:paddingRight="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/roundbtn"
                android:padding="10dp"
                android:text="Log in"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
 </androidx.appcompat.widget.LinearLayoutCompat>
    <!-- 3rd part -->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Or Sign In With"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/twit_pic" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/gsignin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/googleg_standard_color_18" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:onClick="signup"
            android:text="Already have an account? "
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:onClick="signup"
            android:text=" Sign in"
            android:fontFamily="@font/roboto"
            android:textAlignment="textStart"
            android:textColor="@color/orange"
            android:textSize="16sp" />
    </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />


</androidx.appcompat.widget.LinearLayoutCompat>