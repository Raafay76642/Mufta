<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_white_orange"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">
    <!-- 1st -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="30"
        android:gravity="center">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/avatar"
        android:layout_weight="1"/>


    <TextView
        android:layout_weight="4"
        android:drawableEnd="@drawable/ic_baseline_edit_note_24"
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:text="Edit Profile  "
        android:layout_marginBottom="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="14sp" />
    </LinearLayout>
    <!-- 2nd -->
    <androidx.cardview.widget.CardView
        android:layout_weight="20"
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center">

            <EditText
                android:singleLine="true"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:id="@+id/nameBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints="username"
                android:background="@drawable/textbox_outline"
                android:ems="10"
                android:textSize="16sp"
                android:enabled="false"
                android:hint="Enter your name"
                android:inputType="none"
                android:padding="10dp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/emailBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/textbox_outline"
                android:ems="10"
                android:textSize="16sp"
                android:enabled="false"
                android:hint="Enter your email address"
                android:inputType="none"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"/>


            <EditText
                android:singleLine="true"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="10dp"
                android:id="@+id/numberBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints="phone"
                android:textSize="16sp"
                android:background="@drawable/textbox_outline"
                android:ems="10"

                android:enabled="false"
                android:hint="Enter your phonenumber"
                android:inputType="none"
                android:padding="12dp" />

            <EditText
                android:singleLine="true"
                android:drawableStart="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="10dp"
                android:id="@+id/cityBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/textbox_outline"
                android:ems="10"
                android:textSize="16sp"
                android:enabled="false"
                android:hint="Enter your city"
                android:inputType="none"
                android:padding="12dp" />

            <Button
                android:id="@+id/BtnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange"
                android:text="Update Profile"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--3rd-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:padding="30dp">
    <Button
        android:id="@+id/btnlogout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/orange"
        android:text="Logout"
        android:textStyle="bold" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>